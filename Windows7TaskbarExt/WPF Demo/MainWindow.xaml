<Window x:Class="Huseyint.Windows7.WPF.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:win7="clr-namespace:Huseyint.Windows7.WPF;assembly=Huseyint.Windows7.WPF"
        Title="Windows 7 Managed Taskbar Extensions Demo" Width="480" Height="320"
        WindowStartupLocation="CenterScreen" Icon="/Images/GenericApplication.png">

    <win7:TaskbarExtensions.TaskbarButton>
        <win7:TaskbarButton x:Name="taskbarButton" />
    </win7:TaskbarExtensions.TaskbarButton>

    <Grid>
        <ListBox x:Name="iconsList" SelectionChanged="iconsList_SelectionChanged" SelectedIndex="0">
            <ListBox.Items>
                <Image Source="/Images/Error.png" />
                <Image Source="/Images/New.png" />
                <Image Source="/Images/Warning.png" />
            </ListBox.Items>
        </ListBox>
    </Grid>
</Window>